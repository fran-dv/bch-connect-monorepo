{
	"name": "bch-connect-monorepo",
	"private": true,
	"type": "module",
	"workspaces": [
		"packages/*",
		"examples/*",
		"docs"
	],
	"scripts": {
		"lint": "bunx biome lint --write",
		"format": "biome format --write",
		"check": "biome check --write"
	},
	"devDependencies": {
		"@biomejs/biome": "2.3.12",
		"globals": "^16.5.0",
		"husky": "^9.1.7",
		"lint-staged": "^16.2.7",
		"vitest": "^4.0.8"
	},
	"dependencies": {
		"@testing-library/dom": "^10.4.1",
		"@testing-library/react": "^16.3.0",
		"@types/react": "^19.2.2",
		"@types/react-dom": "^19.2.2"
	},
	"lint-staged": {
		"**/*": [
			"biome format --write"
		],
		"**/*.{js,jsx,ts,tsx}": [
			"biome check --write"
		],
		"**/*.{json,md,css,scss}": [
			"biome check --write"
		]
	}
}
